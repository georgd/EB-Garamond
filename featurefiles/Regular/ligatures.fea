lookup liga_regionals {
    sub u1F1E8 u1F1F3 by u1F1E8_u1F1F3; #CN
    sub u1F1EA u1F1F8 by u1F1EA_u1F1F8; #ES
    sub u1F1EB u1F1F7 by u1F1EB_u1F1F7; #FR
